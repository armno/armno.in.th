---
export interface Props {
  src: string;
  alt: string;
  caption?: string;
  width?: string;
  height?: string;
  full?: boolean;
}

const { src, caption, alt, width, height, full } = Astro.props as Props;
---

<figure class={`${full ? 'full-bleed' : ''}`}>
  <img {src} {alt} {width} {height} loading="lazy" class="mt-0" />
  {caption &&
  <figcaption class="px-4 -mt-4">
    {caption}
  </figcaption>
  }
</figure>
