---
export interface Props {
  src: string;
  alt: string;
  caption?: string;
  width?: string;
  height?: string;
}

const { src, caption, alt, width, height } = Astro.props as Props;
---

<figure>
  <img {src} {alt} {width} {height} loading="lazy">
  {caption &&
  <figcaption>
    {caption}
  </figcaption>
  }
</figure>
