<style is:global>
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {

  html {
    font-size: 106.25%;
  }

  h1,
  h2,
  h3,
  h4 {
    @apply font-headings;
  }

  a {
    @apply underline underline-offset-2 hover:text-green-600;
  }

  a[href*="files.armno.in.th"] {
    @apply no-underline;
  }

  img[src*="files.armno.in.th"],
  img[src*="armno.in.th/wp-content/uploads"] {
    @apply border border-dashed border-slate-300 h-36 text-transparent relative;
  }

  img[src*="files.armno.in.th"]::after,
  img[src*="armno.in.th/wp-content/uploads"]::after {
    @apply absolute text-slate-300 w-full h-full  flex justify-center items-center text-sm top-0 left-0 right-0 bottom-0;

    content: "(missing image: " attr(alt) ")";
  }
}

@layer components {

  .footnotes {
    @apply text-sm;
  }

  .main {
    display: grid;
    grid-template-columns: minmax(1.5rem, 1fr) min(65ch, calc(100% - 3rem)) minmax(1.5rem, 1fr);
    @apply max-w-5xl;
  }

  .main > * {
    grid-column: 2;
  }

  .full-bleed {
    grid-column: 1 / -1;
  }

  .prose :where(ul,ol,p):not(:where([class~="not-prose"] *)) {
    margin-top: 0;
  }

  .prose blockquote p {
    margin-top: 1.25em;
  }
}

</style>
