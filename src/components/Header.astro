---
const { url } = Astro.request;
---
<header class="container mx-auto flex justify-between items-center">
  <a href="/" class="inline-block w-20 h-20">
    <svg class="w-20 h-20" width="50" height="50" viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
      <rect width="50" height="50" fill="black"/>
      <path d="M36.1111 34.8006L25 15.5556L13.8889 34.8006H15.6885L21.9948 23.8777L28.3011 34.8006H36.1111Z" fill="white"/>
      </svg>
  </a>

  <nav>
    <a href="/"
      class={
      `inline-block mx-4 ${url === '' ? 'font-bold' : 'text-gray-400'}`
      }>About</a>
    <a href="/blog/"
      class={
      `inline-block mx-4 ${url.includes('/blog') ? 'font-bold' : 'text-gray-400'}`
      }>Blog</a>
    <a href="/uses/"
      class={
      `inline-block mx-4 ${url.includes('/uses') ? 'font-bold' : 'text-gray-400'}`
      }
    >Uses</a>
  </nav>
</header>
