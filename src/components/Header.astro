---
import ThemeToggler from "./ThemeToggler.astro";
const { pathname } = Astro.url;
---

<header
  class="mx-auto px-6 md:px-0 grid grid-flow-col grid-cols-[1fr] items-center max-w-2xl lg:max-w-3xl xl:max-w-4xl"
>
  <a href="/" class="inline-block w-12 h-12 md:w-16 md:h-16">
    <svg class="w-8 h-8 mt-4 lg:w-10 lg:h-10 group" viewBox="0 0 1163 740" xmlns="http://www.w3.org/2000/svg">
      <g fill-rule="evenodd">
        <path d="M0 740h360V380Z" class="group-hover:-translate-y-[160px] transition-transform"/>
        <path d="M1163 0H803v360Z" class="group-hover:translate-y-[160px] transition-transform"/>
        <path d="M501 741h160V1H501Z"/>
      </g>
    </svg>
  </a>

  <nav class="text-sm md:text-base lg:text-lg flex gap-8 lg:gap-12 dark:text-slate-200">
    <a
      href="/"
      class={`inline-block ${pathname === "/" ? "font-bold underline" : "no-underline"}`}
      >About</a
    >
    <a
      href="/blog/"
      class={`inline-block ${
        pathname.includes("/blog/") ? "font-bold underline" : "no-underline"
      }`}>Blog</a
    >
    <a
      href="/uses/"
      class={`inline-block ${
        pathname.includes("/uses") ? "font-bold underline" : "no-underline"
      }`}>Uses</a
    >
  </nav>
  <ThemeToggler />
</header>
