---
import PublishedDate from '@components/PublishedDate.astro';
import PageLayout from './PageLayout.astro';
import '../styles/global.css';

const { content } = Astro.props;
const { title, date } = content;
---
<PageLayout { content }>
  <article>
    <h1>{title}</h1>
    <PublishedDate {date} align="center" />
    <slot />
  </article>
</PageLayout>
