---
import PublishedDate from '@components/PublishedDate.astro';
import RelatedPosts from '@components/RelatedPosts.astro';
import PageLayout from './PageLayout.astro';
import '../styles/global.css';

const { content } = Astro.props;
const { title, pubDate } = content;
const canonicalURL = Astro.canonicalURL;
---
<PageLayout { content } isPost={true}>
  <h1 class="text-4xl lg:text-5xl leading-tight lg:leading-tight">{title}</h1>
  <PublishedDate {pubDate} />
  <slot />
  <RelatedPosts tags={content.tags} currentPathname={canonicalURL.pathname} />
</PageLayout>
