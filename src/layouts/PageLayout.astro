---
// import '@fontsource/sarabun/400.css';
// import '@fontsource/sarabun/700.css';
// import '@fontsource/frank-ruhl-libre/700.css';

import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import BaseHead from '@components/BaseHead.astro';
import GlobalStyle from '@components/GlobalStyle.astro';

const { frontmatter, isPost } = Astro.props;
const { title, description, thumbnail, language } = frontmatter;

const classes = 'mt-20 mx-auto pb-24 prose prose-slate prose-base main leading-6 px-6 md:px-0 dark:prose-invert dark:text-slate-200';
---
<html lang={language ? language : 'th'}>
	<head>
		<BaseHead {title} {description} {thumbnail} />
    <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
    <script src="/pagefind/pagefind-ui.js" is:inline></script>
    <GlobalStyle />
	</head>
	<body class="antialiased dark:bg-zinc-900" data-pagefind-body={isPost} data-pagefind-ignore={!isPost}>
		<Header />
    {isPost &&
		<article class={classes}>
      <slot name="post-header" />
      <slot />
    </article>
    }

    {!isPost &&
		<main class={classes}>
      <slot />
    </main>
    }
    <Footer />
	</body>
</html>
