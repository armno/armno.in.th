---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import BaseHead from '@components/BaseHead.astro';
import '../styles/global.css';

const { content, notProse } = Astro.props;
const { title } = content;

let classes = 'px-6 mt-20 mx-auto pb-24 prose prose-slate lg:prose-lg';
if (notProse) {
	classes = 'px-6 mt-20 mx-auto pb-24';
}
---
<html lang="en">
	<head>
		<BaseHead {title} />
	</head>
	<body class="antialiased">
		<Header />
		<main class={classes}>
      <slot />
    </main>
    <Footer />
	</body>
</html>
